<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Powder Day</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Enter Resort:</label>
            <input type="text" id="resort-name" class="form-control" aria-describedby="resort-name" placeholder="Enter Resort Name">
          </div>
          <div class="form-group">
            <label for="resort-rank">Resort Rank</label>
            <textarea class="form-control" id="resort-rank" aria-describedby="resort-rank" placeholder="Enter Resort Rank (1-10)"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Resort list:</h3>
        <ul id="resort-list" class="list-group">
          {{#each resorts}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="resort/{{this.id}}">{{this.name}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
