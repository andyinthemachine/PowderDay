<div id="home">
  <nav class="navbar navbar-dark bg-primary p-3 mb-2 bg-info text-white rounded">
    <a class="navbar-brand text-uppercase font-weight-bold">Powder Day üéø go get yours</a>
  </nav>
  <header>
    <div class="header">
      <h3 class="display-3  text-center text-uppercase font-weight-bold text-white"
        style="font-family: 'Ubuntu', sans-serif">
        üèÇ Find the best conditions ‚õ∑
      </h3>

      <div class="header">
        <h4 class="display-5 text-white text-center text-uppercase font-weight-bold"
          style="font-family: 'Ubuntu', sans-serif">
          Power Day will lead you there!
        </h4>
      </div>
    </div>
  </header>

  <div class="container">
    <div class="row">
      <div class="col-8">

        <table class="table" id="rtable">
          <thead>
            <tr>
              <th><strong> NAME</strong></th>
              <th><strong> NOW</strong></th>
              <th><strong> YESTERDAY</strong></th>
              <th><strong> TODAY</strong></th>
            </tr>
          </thead>
          <tbody class="table-body" class="col-sm-8">

            {{#each resorts}}
            <tr class="resort-table">
              <td><a class="resort-link" href="resort/{{this.id}}"><strong>{{this.name}}</strong></td>,
              <td><strong>{{this.current_conditions}}</strong></td>,
              <td><strong>{{this.precip_prev_day}}</strong></td>,
              <td><strong>{{this.precip_forecast}}</strong></td>
              <td data-id="{{this.id}}"><button class="btn btn-warning delete">ÔΩò</button></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class="col-4">
        <div id="loc">
          <input type="text" id="change-location" placeholder="Copper, CO">
          <button type="submit" id="submit-btn" class="btn btn-primary mx-sm-3 mb-2">Submit</button>
        </div>
        <div id="map"></div>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
